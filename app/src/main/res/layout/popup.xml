<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/popupTitleID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <Button
        android:id="@+id/popupSeeCountryDetailsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popupTitleID"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="@string/seeCountryDetails"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView_setAs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/popupSeeCountryDetailsButton"
        android:layout_marginTop="10dp"
        android:text="@string/setAs"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/linearLayout_states"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_setAs"
        android:orientation="horizontal">

        <Button
            android:id="@+id/popupVisited"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_below="@id/linearLayout_states"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="@string/visited"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/popupPending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_below="@id/linearLayout_states"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="@string/pending"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/popupNotVisited"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_below="@id/linearLayout_states"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="@string/notvisited"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/popupSaveCountryStateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout_states"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:text="@string/save"
        android:textColor="@android:color/white" />

</RelativeLayout>